<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_bg__sign_in_color"
    tools:context=".FragmentosAdmin.InicioAdmin">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:text="CategorÃ­as"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/Eligeunacategoriatxt"
            android:textColor="#000"
            android:textSize="20sp"
            android:paddingStart="10px"
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--Fila 1-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <!--Empleados-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_personalizado"
                android:layout_margin="20px"
                android:paddingTop="10px"
                android:layout_weight="1">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_margin="40px"
                    android:background="@drawable/rectangle_2_ek1_shape">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:paddingLeft="50px"
                        android:paddingRight="50px"
                        android:src="@drawable/empleado2"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <Button
                    android:id="@+id/Empleados"
                    android:text="@string/Empleados"
                    android:background="@drawable/btn_personalizado"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--Platos-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/btn_personalizado"
                android:layout_margin="20px"
                android:paddingTop="10px"
                android:gravity="center"
                android:layout_weight="1">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_margin="39px"
                    android:background="@drawable/rectangle_2_ek1_shape">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:paddingLeft="50px"
                        android:paddingRight="50px"
                        android:src="@drawable/plato3"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <Button
                    android:id="@+id/Platos"
                    android:text="@string/Platos"
                    android:background="@drawable/btn_personalizado"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <!--Pedidos-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/btn_personalizado"
                android:layout_margin="20px"
                android:paddingTop="10px"
                android:gravity="center"
                android:layout_weight="1">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_margin="40px"
                    android:background="@drawable/rectangle_2_ek1_shape">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:paddingLeft="50px"
                        android:paddingRight="50px"
                        android:src="@drawable/pedido3"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <Button
                    android:id="@+id/Pedidos"
                    android:text="@string/Pedidos"
                    android:background="@drawable/btn_personalizado"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--Administradores-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/btn_personalizado"
                android:layout_margin="20px"
                android:paddingTop="10px"
                android:gravity="center"
                android:layout_weight="1">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="180dp"
                    android:layout_height="160dp"
                    android:layout_margin="39px"
                    android:background="@drawable/rectangle_2_ek1_shape">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:paddingLeft="50px"
                        android:paddingRight="50px"
                        android:src="@drawable/admin2"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <Button
                    android:id="@+id/Usuarios"
                    android:text="@string/Usuarios"
                    android:background="@drawable/btn_personalizado"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>